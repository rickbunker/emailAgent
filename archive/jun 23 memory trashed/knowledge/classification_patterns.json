{
    "metadata": {
        "description": "Document classification patterns for procedural memory",
        "version": "2.0.0",
        "created_date": "2025-06-20",
        "memory_type": "procedural",
        "notes": "Regex patterns for identifying document types based on content and filenames"
    },
    "classification_patterns": [
        {
            "pattern_id": "loan_doc_pattern_01",
            "document_category": "loan_documents",
            "asset_type": "private_credit",
            "regex_patterns": [
                "(?i)(RLV|rlv).*\\.(pdf|doc|docx)$",
                "(?i)revolver.*agreement",
                "(?i)credit.*agreement",
                "(?i)loan.*agreement",
                "(?i)term.*loan",
                "(?i)(TD|td).*\\.(pdf|doc|docx)$"
            ],
            "keywords": [
                "revolver",
                "credit agreement",
                "loan",
                "term",
                "RLV",
                "TD"
            ],
            "confidence_range": [
                0.75,
                0.95
            ],
            "filename_indicators": [
                "RLV",
                "TD",
                "loan",
                "credit",
                "agreement"
            ]
        },
        {
            "pattern_id": "financial_stmt_pattern_01",
            "document_category": "borrower_financials",
            "asset_type": "private_credit",
            "regex_patterns": [
                "(?i)financial.*statement",
                "(?i)(P&L|PL|P_L)",
                "(?i)balance.*sheet",
                "(?i)income.*statement",
                "(?i)cash.*flow"
            ],
            "keywords": [
                "financial",
                "statement",
                "P&L",
                "balance sheet",
                "income"
            ],
            "confidence_range": [
                0.70,
                0.90
            ],
            "filename_indicators": [
                "FS",
                "financials",
                "stmt",
                "P&L"
            ]
        },
        {
            "pattern_id": "compliance_cert_pattern_01",
            "document_category": "covenant_compliance",
            "asset_type": "private_credit",
            "regex_patterns": [
                "(?i)compliance.*certificate",
                "(?i)covenant.*compliance",
                "(?i)compliance.*report",
                "(?i)covenant.*test"
            ],
            "keywords": [
                "compliance",
                "certificate",
                "covenant"
            ],
            "confidence_range": [
                0.80,
                0.95
            ],
            "filename_indicators": [
                "compliance",
                "cert",
                "covenant"
            ]
        },
        {
            "pattern_id": "amendment_pattern_01",
            "document_category": "loan_documents",
            "asset_type": "private_credit",
            "regex_patterns": [
                "(?i)amendment.*\\d+",
                "(?i)\\d+(st|nd|rd|th).*amendment",
                "(?i)amendment.*agreement"
            ],
            "keywords": [
                "amendment"
            ],
            "confidence_range": [
                0.85,
                0.95
            ],
            "filename_indicators": [
                "amend",
                "amendment",
                "amd"
            ]
        },
        {
            "pattern_id": "correspondence_pattern_01",
            "document_category": "correspondence",
            "asset_type": "private_credit",
            "regex_patterns": [
                "(?i)letter",
                "(?i)correspondence",
                "(?i)email.*backup",
                "(?i)communication"
            ],
            "keywords": [
                "letter",
                "correspondence",
                "email"
            ],
            "confidence_range": [
                0.60,
                0.75
            ],
            "filename_indicators": [
