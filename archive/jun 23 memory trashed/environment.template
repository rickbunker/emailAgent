# Email Agent Environment Configuration Template
# Copy this file to .env in the project root and fill in your values

# === GMAIL CONFIGURATION ===
GMAIL_CREDENTIALS_PATH=config/gmail_credentials.json
GMAIL_TOKEN_PATH=config/gmail_token.json

# === MICROSOFT GRAPH CONFIGURATION ===
MSGRAPH_CREDENTIALS_PATH=config/msgraph_credentials.json

# === DATABASE/STORAGE ===
# Qdrant Vector Database (optional - for enhanced document matching)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=

# === APPLICATION SETTINGS ===
# Flask configuration
FLASK_ENV=production
FLASK_SECRET_KEY=your-secret-key-here  # pragma: allowlist secret
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# === PROCESSING CONFIGURATION ===
# Asset management
ASSETS_BASE_PATH=./assets
PROCESSED_ATTACHMENTS_PATH=./processed_attachments

# Email processing
DEFAULT_HOURS_BACK=24
MAX_EMAILS_PER_BATCH=100
ENABLE_VIRUS_SCANNING=true
ENABLE_SPAM_FILTERING=true

# Human review thresholds
LOW_CONFIDENCE_THRESHOLD=0.7
REQUIRES_REVIEW_THRESHOLD=0.5

# === LOGGING ===
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/email_agent.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# === SECURITY ===
# File processing limits
MAX_ATTACHMENT_SIZE_MB=50
ALLOWED_FILE_EXTENSIONS=pdf,docx,xlsx,jpg,png,txt

# ClamAV virus scanning (if available)
CLAMAV_SOCKET_PATH=/var/run/clamav/clamd.ctl

# === DEVELOPMENT ===
# Set to true for development mode
DEBUG=false
DEVELOPMENT_MODE=false
